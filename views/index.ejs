    <ul>
        <% data.data.forEach(item => { %>
          <div class="rounded-lg w-96 flex bg-white mt-5 ml-10" onclick="fetchChapters('<%= item.id %>')">
            <!-- <a href="https://api.mangadex.org/manga/<%= item.id %>/feed" class="block relative"> -->
            <!-- <p class="w-[1rem]"><%= item.attributes.description.en %></p> -->
      
            <% if (item.coverFileName) { %>
              <img src="https://uploads.mangadex.org/covers/<%= item.id %>/<%= item.coverFileName %>"
                alt="Cover for <%= item.attributes.title.en %>"
                class="h-44 w-44 rounded-tl-lg rounded-bl-lg object-cover" />

            <% } else { %>
              <p>No cover available</p>
            <% } %>

            <div class="w-3/4 justify-between items-center p-4 ">
              <div class="mb-5">
                <h3><%= item.attributes.title.en %></h3>
              </div>
              <div>
                <h3><%= item.attributes.year %></h3>
                <h3> Chapter <%= item.attributes.lastChapter %></h3>
              </div>
            </div>
          </div>
        <% }) %>
