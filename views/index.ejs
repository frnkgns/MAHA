    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script>
      async function fetchChapters(mangaID) {
        try {
          const response = await fetch(`/chapter?id=${mangaID}`); // Send GET request to /chapter
          if (!response.ok) {
            throw new Error("Failed to fetch chapter data.");
          }
    
          const data = await response.json(); // Get the JSON data
          console.log("Chapter data:", data); // Check data in console
    
          // ✅ Get chapter IDs and sort them correctly
          const chapterIDs = data.data
            .sort((a, b) => Number(a.attributes.chapter) - Number(b.attributes.chapter)) // Sort chapters
            .map((chapter) => chapter.id); // Map to get chapter IDs
    
          // ✅ Remove duplicates
          const uniqueChapterIDs = [...new Set(chapterIDs)];
          console.log("Chapter IDs:", uniqueChapterIDs); // Print sorted and unique IDs
    
          // ✅ If you only want to print the first Chapter ID
          const ChapterId = uniqueChapterIDs[0];

          window.open(`/read?id=${ChapterId}`, "_blank"); // Open in a new tab

    
        } catch (error) {
          console.error("Error fetching chapters:", error.message);
        }
      }
    </script>    
