    <ul>
        <% data.data.forEach(item => { %>
          <div class="rounded-lg w-96 flex bg-white mt-5 ml-10" onclick="fetchChapters('<%= item.id %>')">
            <!-- <a href="https://api.mangadex.org/manga/<%= item.id %>/feed" class="block relative"> -->
